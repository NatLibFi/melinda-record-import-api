{
  "name": "@natlibfi/melinda-record-import-api",
  "description": "API microservice of Melinda record batch import system",
  "author": {
    "name": "The National Library of Finland"
  },
  "keywords": [],
  "homepage": "https://github.com/natlibfi/melinda-record-import-api",
  "bugs": {
    "url": "https://github.com/natlibfi/melinda-record-import-api/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:natlibfi/melinda-record-import-api.git"
  },
  "license": "AGPL-3.0+",
  "version": "1.0.1",
  "main": "./dist/index.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node ./dist/index",
    "lint": "eslint src",
    "lint:dev": "eslint --fix src",
    "test:base": "cross-env NODE_ENV=test mocha -timeout 20000 --exit --require @babel/register -- src/**/*.spec.js",
    "test": "npm run lint && npm run test:base",
    "test:dev": "npm run lint:dev && npm run test:base",
    "coverage": "npm run cover:unit && npm run cover:report",
    "cover:unit": "nyc --silent npm run test",
    "cover:report": "nyc report --reporter=lcov --reporter=text",
    "build": "babel src --source-maps --copy-files --delete-dir-on-start --out-dir=dist",
    "build:dev": "npm run build:transpile",
    "watch:test": "cross-env DEBUG=@natlibfi/* NODE_ENV=test nodemon -w src --exec 'npm run test:dev'",
    "dev": "cross-env DEBUG=@natlibfi/* nodemon -w src --exec 'babel-node src/index.js'"
  },
  "dependencies": {
    "@babel/runtime": "^7.22.6",
    "@natlibfi/express-validate-content-type": "^1.0.1",
    "@natlibfi/fixugen": "^2.0.1",
    "@natlibfi/melinda-backend-commons": "^2.2.1",
    "@natlibfi/melinda-commons": "^13.0.5",
    "@natlibfi/melinda-record-import-commons": "^10.1.6",
    "@natlibfi/melinda-rest-api-client": "^4.0.2",
    "@natlibfi/melinda-rest-api-commons": "^4.0.7",
    "@natlibfi/passport-melinda-crowd": "^3.0.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "express": "^4.18.2",
    "express-content-length-validator": "^1.0.0",
    "http-status": "^1.6.2",
    "moment": "^2.29.4",
    "mongo-sanitize": "^1.1.0",
    "mongodb": "^4.16.0",
    "mongoose": "^6.11.5",
    "passport": ">=0.6.0 <1.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/cli": "latest",
    "@babel/core": "latest",
    "@babel/eslint-parser": "latest",
    "@babel/node": "latest",
    "@babel/preset-env": "latest",
    "@babel/register": "latest",
    "@natlibfi/eslint-config-melinda-backend": "^3.0.0",
    "@natlibfi/fixura": "^3.0.1",
    "@natlibfi/fixura-mongo": "^2.0.5",
    "babel-plugin-rewire": "^1.2.0",
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "eslint": "^8.46.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0"
  },
  "eslintConfig": {
    "extends": "@natlibfi/melinda-backend"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": "maintained node versions"
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "rewire"
        ]
      }
    }
  },
  "nyc": {
    "include": [
      "src/interfaces/*.js"
    ],
    "exclude": [
      "**/*.spec.js"
    ],
    "reporter": [
      "lcov",
      "html"
    ],
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80
  }
}
