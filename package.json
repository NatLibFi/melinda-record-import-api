{
  "name": "@natlibfi/melinda-record-import-api",
  "description": "API microservice of Melinda record batch import system",
  "author": {
    "name": "The National Library of Finland"
  },
  "keywords": [],
  "homepage": "https://github.com/natlibfi/melinda-record-import-api",
  "bugs": {
    "url": "https://github.com/natlibfi/melinda-record-import-api/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:natlibfi/melinda-record-import-api.git"
  },
  "license": "AGPL-3.0+",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "engines": {
    "node": ">=7"
  },
  "scripts": {
    "prepublishOnly": "npm run build:transpile",
    "lint": "xo --fix",
    "test": "cross-env NODE_ENV=dev nyc mocha --require babel-core/register",
    "coverage": "nyc check-coverage",
    "clean": "rimraf build coverage .nyc_output dist",
    "build:transpile": "babel src --source-maps --out-dir=dist --minified",
    "build": "npm run build:transpile && ncu",
    "dev": "npm run clean && npm run build:transpile",
    "dev:check": "npm run clean && npm run lint && npm test;npm run coverage;npm run dev",
    "dev:watch": "chokidar src -c 'npm run build:transpile && node dist/index.js'",
    "check-and-build": "npm run lint && npm test && npm run coverage && npm run build",
    "travisci": "npm run check-and-build",
    "publish-to-npm": "npm install && npm run lint && npm test && npm run coverage && npm publish --access=public"
  },
  "dependencies": {
    "atlassian-crowd": "^0.5.0",
    "atlassian-crowd-client": "^2.0.0",
    "basic-auth": "^2.0.0",
    "body-parser": "^1.18.2",
    "chai-http": "^3.0.0",
    "connect": "^3.2.0",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "js-yaml": "^3.3.0",
    "lodash": "^4.17.5",
    "method-override": "^2.3.10",
    "moment": "^2.20.1",
    "mongoose": "^5.0.5",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-atlassian-crowd2": "0.0.17",
    "passport-local": "^1.0.0",
    "request": "^2.85.0",
    "swagger-tools": "0.10.1",
    "swagger-ui-express": "^3.0.8",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chokidar-cli": "^1.2.0",
    "codeclimate-test-reporter": "^0.5.0",
    "cross-env": "^5.1.1",
    "events": "^2.0.0",
    "git-scripts": "^0.2.1",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1",
    "node-mocks-http": "^1.6.7",
    "nodemon": "^1.12.4",
    "npm-check-updates": "^2.13.0",
    "nyc": "^11.3.0",
    "rimraf": "^2.6.2",
    "xo": "^0.18.2"
  },
  "xo": {
    "rules": {
      "prefer-arrow-callback": [
        "error"
      ]
    }
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "7"
          }
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "reporter": [
      "lcov",
      "html"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  }
}
